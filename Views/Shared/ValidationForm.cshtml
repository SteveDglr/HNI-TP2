@model TPLOCAL1.Models.FormationModel


<title>HN - TP LOCAL</title>
<head>
    <img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN" />
    <title>Validation Page</title>
    <link rel="stylesheet" href="~/resources/Index.css" />
</head>
<body>
     <nav>
        <ul>
            <li><a href="/Home">Acceuil</a></li>
            <li><a href="Home/Index/AvisList">Liste des avis</a></li>
        </ul>
    </nav>
    <div class="center-text">
        <h2>Votre formulaire a bien été pris en compte</h2>
    </div>
    
    <table>
        <tr>
            <td colspan="2" class="title-center">
                Informations personnelles
            </td>
        </tr>
        <tr>
            <td>Nom</td>
            <td>@Model.InfoPage.Nom</td>
        </tr>
        <tr>
            <td>Prénom</td>
            <td>@Model.InfoPage.Prenom</td>
        </tr>
        <tr>
            <td>Sexe</td>
            <td>@Model.InfoPage.Sexe</td>
        </tr>
        <tr>
            <td>Adresse</td>
            <td>@Model.InfoPage.Adresse</td>
        </tr>
        <tr>
            <td>Code Postal</td>
            <td>@Model.InfoPage.CodePostal</td>
        </tr>
        <tr>
            <td>Ville</td>
            <td>@Model.InfoPage.Ville</td>
        </tr>
        <tr>
            <td>Email</td>
            <td>@Model.InfoPage.Email</td>
        </tr>
    </table>

    
    <table>
        <tr>
            <td colspan="2" class="title-center">
                Informations formation suivie
            </td>
        </tr>
        <tr>
            <td>Date début formation</td>
            <td>@Model.InfoPage.DebForm.ToString("dd/MM/yyyy")</td>
        </tr>
        <tr>
            <td>Formations suivies</td>
            <td>@Model.InfoPage.Form</td>
        </tr>
    </table>
    
    <table>
        <tr>
            <td colspan="2" class="title-center">
                Avis sur la formation
            </td>
        </tr>
        <tr>
            <td>Formation Cobol</td>
            <td>@Model.InfoPage.Cobol</td>
        </tr>
        <tr>
            <td>Formation C#</td>
            <td>@Model.InfoPage.Dotnet</td>
        </tr>
    </table>
</body>
